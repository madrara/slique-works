<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cartbolt.qui.screens.Start">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/startlogo"
            android:layout_marginTop="100dp"
            android:layout_width="147dp"
            android:layout_height="147dp"
            android:src="@drawable/cartboltlogo" />


        <TextView
            android:id="@+id/startlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="2dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:text="@string/start_label"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/startlogin"
            android:layout_marginTop="50dp"
            android:background="@color/blue"
            android:gravity="center"
            android:textColor="#FFF"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/start_login" />

        <TextView
            android:id="@+id/startsignup"
            android:layout_marginTop="10dp"
            android:background="@color/yellow"
            android:padding="4dp"
            android:gravity="center"
            android:textColor="#FFF"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/start_signup" />

        <TextView
            android:id="@+id/startskip"
            android:background="@null"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="#FFF"
            android:layout_width="210dp"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:text="@string/start_skip" />

    </LinearLayout>

    <TextView
        android:id="@+id/startcopyright"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="3dp"
        android:textColor="#FFF"
        android:layout_width="240dp"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        android:text="@string/start_startcopyright" />

</RelativeLayout>
