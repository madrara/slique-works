<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.flash.superkatale.AddCart">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD CART"
        android:id="@+id/button3"
        android:background="@drawable/rounded_corner"
        android:layout_alignBottom="@+id/viewcart"
        android:layout_toRightOf="@+id/txitemid"
        android:layout_alignRight="@+id/txtsptname"
        android:layout_alignEnd="@+id/txtsptname" />

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:background="@drawable/rounded_corner"
        android:layout_above="@+id/editText2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="7' FUNDA TABLET (etabi 7041G)\nIntel Sofia Quad Core 1.2GHz processor\nAndroid lollipop 1024x600IPS "
        android:maxLines="5"
        android:id="@+id/txfulldec"
        android:layout_below="@+id/editText2"
        android:layout_alignRight="@+id/txtsptname"
        android:layout_alignEnd="@+id/txtsptname" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="369000"
        android:textColor="#F06292"
        android:id="@+id/textView11"
        android:layout_below="@+id/txfulldec"
        android:layout_alignRight="@+id/txtsptname"
        android:layout_alignEnd="@+id/txtsptname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(UGX)"
        android:id="@+id/textView12"
        android:textColor="#F06292"
        android:layout_alignBaseline="@+id/tximage"
        android:layout_alignBottom="@+id/tximage"
        android:layout_alignRight="@+id/txtemai"
        android:layout_alignEnd="@+id/txtemai" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7' FUNDA TABLET"
        android:textColor="#F06292"
        android:id="@+id/txname"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:hint="(Enter Quantity)"
        android:gravity="center"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/txtsptname"
        android:layout_alignEnd="@+id/txtsptname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spmkt ID"
        android:id="@+id/txtspmkid"
        android:layout_below="@+id/tximage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spmkt Name"
        android:id="@+id/txtsptname"
        android:layout_below="@+id/tximage"
        android:layout_toRightOf="@+id/editText2"
        android:layout_toEndOf="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:inputType="number"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignLeft="@+id/txtemai"
        android:layout_alignStart="@+id/txtemai" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item ID"
        android:id="@+id/txitemid"
        android:layout_below="@+id/tximage"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(UGX)"
        android:id="@+id/textView13"
        android:layout_below="@+id/txfulldec"
        android:layout_toLeftOf="@+id/editText2"
        android:layout_toStartOf="@+id/editText2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image_url"
        android:gravity="center"
        android:id="@+id/tximage"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewcart"
        android:background="@drawable/rounded_corner"
        android:text="VIEW CART"
        android:layout_below="@+id/txtspmkid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/txitemid"
        android:layout_toStartOf="@+id/txitemid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHONE NUMBER"
        android:id="@+id/txtemai"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignRight="@+id/txname"
        android:layout_alignEnd="@+id/txname" />

</RelativeLayout>
