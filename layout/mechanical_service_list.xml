<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/feed_bg"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/feed_item_margin"
        android:layout_marginRight="@dimen/feed_item_margin"
        android:layout_marginTop="@dimen/feed_item_margin"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/bg_parent_rounded_corner"
        android:orientation="vertical"
        android:paddingBottom="@dimen/feed_item_padding_top_bottom"
        android:paddingTop="@dimen/feed_item_padding_top_bottom" >

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_chevron_right_black_24dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/mservicename"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mechanical Service Name"
        android:id="@+id/mservicename"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/mserviceslogan"
        android:layout_alignStart="@+id/mserviceslogan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location and Branches All over"
        android:id="@+id/mservicelocation"
        android:layout_below="@+id/mservicename"
        android:layout_alignLeft="@+id/mservicename"
        android:layout_alignStart="@+id/mservicename" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mservice ID"
        android:id="@+id/mserviceid"
        android:layout_alignTop="@+id/mserviceslogan"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mservice Contact"
        android:id="@+id/mservicecontact"
        android:layout_below="@+id/mservicelocation"
        android:layout_toRightOf="@+id/mserviceslogan"
        android:layout_toEndOf="@+id/mserviceslogan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mservice Slogan"
        android:id="@+id/mserviceslogan"
        android:layout_alignTop="@+id/mservicecontact"
        android:layout_centerHorizontal="true" />
        </RelativeLayout>
</RelativeLayout>
